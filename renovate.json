{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>bbsakura/renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^scripts/install-go-tools.sh$"
      ],
      "matchStrings": [
        "go install (?<depName>[^@]+?)@(?<currentValue>.+)\n"
      ],
      "datasourceTemplate": "go"
    }
  ]
}
